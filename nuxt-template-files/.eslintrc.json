{
  "env": { "browser": true, "node": true },
  "extends": ["eslint:recommended", "plugin:vue/essential"],
  "parserOptions": { "ecmaVersion": 2021, "sourceType": "module" },
  "rules": {
    "no-console": "off",
    "semi": [2, "never"],
    "sort-keys": ["error", "asc"],
    "vue/attributes-order": "off",
    "vue/html-self-closing": [
      "error",
      {
        "html": {
          "component": "always",
          "normal": "always",
          "void": "always"
        }
      }
    ]
  }
}
